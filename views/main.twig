{% extends "__layout.twig" %}

{% block content %}
<div class="container">
    <div class="d-flex">
        {% for object in dota_hero %}
        <div class="p-2">
            <h1>{{object.hero_name}}</h1>
            <img class="icon" src="{{object.image_hero}}" alt="картинка не грузится">
            <ul class="nav nav-pills">
                <li class="nav-item">
                    <a class="nav-link {{ is_image ? 'active'}}" href="">
                        Картинка
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ is_info ? 'active'}}" href="">
                        Описание
                    </a>
                </li>
            </ul>
        </div>
        {% endfor %}
    </div>
</div>
<style>
.icon {
 width: 200px;
 height: 125px;
 border-radius: 10%;
}
</style>
{% endblock %}